import java.util.Scanner;

public class lista4 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int populacaoA = 80000;
        int populacaoB = 200000;
        double taxaA = 0.03;
        double taxaB = 0.015;
        int anos = 0;

        while (populacaoA <= populacaoB) {
            populacaoA += (int)(populacaoA * taxaA);
            populacaoB += (int)(populacaoB * taxaB);
            anos++;
        }

        System.out.println("\nSerão necessários " + anos + " anos para a população do país A");
        System.out.println("ultrapassar ou igualar a população do país B.");
        System.out.println("População final após " + anos + " anos:");
        System.out.println("País A: " + populacaoA + " habitantes");
        System.out.println("País B: " + populacaoB + " habitantes");
    }

}
